<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/main_color"
        android:gravity="center"
        android:text="@string/listener"
        android:textColor="@color/title_text"
        android:textSize="@dimen/title_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:src="@mipmap/help"
        android:onClick="startHelpActivity"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/title" />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_text"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/listener_stomach"
        />
    <TextView
        android:id="@+id/listener_heart"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="@string/listener_heart"
        android:background="@color/select"
        android:textSize="@dimen/main_text_size"
        android:padding="-20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/listener_stomach"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="@string/listener_stomach"
        android:textSize="@dimen/main_text_size"
        android:background="@color/unselect"
        android:includeFontPadding="false"
        android:padding="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/listener_heart"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintWidth_percent="0.5" />
    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:background="@color/title_text"
        app:layout_constraintEnd_toStartOf="@id/listener_stomach"
        app:layout_constraintStart_toEndOf="@id/listener_heart"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toTopOf="@id/line3"/>
    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/second_title_height"
        android:background="@color/title_text"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pluse_image"
        />

    <ImageView
        android:id="@+id/pluse_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/heart"
        app:layout_constraintBottom_toTopOf="@+id/pluse_wave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/listener_heart"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/pluse_tip"
        android:layout_width="0dp"
        android:layout_height="500dp"
        app:layout_goneMarginLeft="10dp"
        android:gravity="center_vertical"
        android:text="@string/heart_info"
        android:textColor="@color/text_color"
        android:textSize="@dimen/title_size"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pluse_image"
        app:layout_constraintTop_toBottomOf="@id/listener_stomach" />
    <ImageView
        android:id="@+id/pluse_wave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@mipmap/wave"
        android:scaleType="fitXY"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/title_height"
        app:layout_constraintTop_toBottomOf="@id/pluse_tip" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="点击开始回答问题"
        android:textColor="@color/text_color"
        android:textSize="@dimen/title_size"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pluse_wave"/>

    <SurfaceView
        android:id="@+id/listener_heart_wave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/wave"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pluse_image" />


</androidx.constraintlayout.widget.ConstraintLayout>